<main>
  <%= erb :'questions/_body', locals: {question: @question, image: @image}, layout: false %>

  <div class="answers-wrapper">
  <h1>Totally Rad Responses</h1>
  <% if logged_in? %>
    <%= erb :'answers/_new', locals: {question: @question}, layout: false %>
  <% end %>

    <% @question.answers.each do |answer| %>
    <div class="answer-box">
        <%= erb :'answers/_show', locals: {answer: answer}, layout: false %>
    </div>
    <% end %>

</div>

</main>
